
$index-width = 4.8rem
$content-width = 48rem
$broad-width = 60rem

$index-padding-top-adjustment = 0.2rem

$font-size_200 = 1.6rem
$font-size_400 = 2.1rem
$font-size_600 = 2.4rem
$font-size_800 = 3.6rem

$grey-200 = #d1d1c7
$grey-400 = #94948d
$black = #1c1c1b
$red = #BF2128
$background-color = #faf8ed

$sans = IBM Plex Sans
$serif = Spectral



$index()
  width $index-width
  font-size $font-size_200
  font-family $sans

  padding-top $index-padding-top-adjustment

  color $grey-200

$nav()
  width 100%
  font-size $font-size_200
  // background-color $background-color
  border-bottom 1px solid $black


$button()
  color $black
  border 1px solid $black

  font-size $font-size_200
  font-family $sans

  display flex
  align-items center
  padding 0.3rem 0.6rem
  width max-content

  cursor pointer
  user-select none

  span
      font-size $font-size_200

      &:first-of-type
        margin-right 0.6rem

  &:hover
    background-color $black
    color $background-color
    border-color $black