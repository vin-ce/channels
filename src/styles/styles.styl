
@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Spectral:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Tomorrow:ital,wght@0,300;0,600;1,300;1,600&display=swap');

@import "./variables.styl"

:root 
  font-size 62.5%

body
  font-family $serif
  font-size $font-size_400
  margin 0

  background-color $background-color
  line-height 1.5

h1
h2
h3
  margin 0
  font-weight 400

h1
  font-size 4.8rem

h2 
  font-size $font-size_600
  text-transform uppercase

h3
  font-weight 400
  font-size $font-size_400
  margin-bottom 2.4rem
  font-variant small-caps

p
  margin 2.4rem 0

blockquote
  font-size $font-size_800
  margin 0
  width $broad-width
  line-height 1.3

figcaption
  margin-bottom 2.4rem
  font-size $font-size_200
  font-style italic
  // font-family IBM Plex Sans

hr
  border 0
  margin 2.4rem 0

a
  color $black

  &:visited
    color $grey-400