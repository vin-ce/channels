@import "./variables.styl"

.module
  display flex
  margin-top 2.4rem
  margin-left 2.4rem

  .index
    $index()

  .content

    p

      &:first-of-type
        margin-top 0
      
      &:last-of-type
        margin-bottom 0

    img
      // these width settings allow image to scale 
      max-width $broad-width
      width 100% 
      border 3px solid $red


